#pragma once

enum FarmType { Fruit, Vegtable };

class FarmProduct: public virtual Product
{
private:
	char* mName;
	int mSuppliersAmount;
	FarmType mFarmType;
	int mSeasonsNumber;

public:
	FarmProduct();
	FarmProduct(char* name, int id, ShelfRow place, int weight,
			ProductType type, ExposureValue exposure,int supplierNumber,FarmType farmtype
			,int seasonsnumber);
	virtual ~FarmProduct();
	virtual int calculatePrice();
	virtual void print();

	virtual void write(ostream& out) const;
	virtual void read(istream& in);
	virtual void save(ofstream& out) const;
	virtual void load(ifstream& in);
	virtual void saveBin(ofstream& out) const;
	virtual void loadBin(ifstream& in);
};

