#include "Product.h"
#include <iostream>

using namespace std;

Product::Product(
		int id,
		int shelf,
		char row,
		int weight,
		ProductType type,
		ExposureValue exposure):
				mId(id),
				mShelf(shelf),
				mRow(row),
				mWeight(weight),
				mType(type),
				mExposure(exposure)
{

}

void Product::print() const
{
	cout << mRow << " " << mShelf << " (" << mType << "," << mWeight << "," << mExposure << ") "
			<< mId << endl;
}

Product::~Product() {
}
