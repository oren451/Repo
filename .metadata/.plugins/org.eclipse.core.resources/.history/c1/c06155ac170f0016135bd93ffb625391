#include "Store.h"
#include "fstream"
#include "iostream"
#include "MilkyCheeseProduct.h"
#include "FruitProduct.h"

using namespace std;

static int UINT = 0;

int main(int argc, char **argv) {

	MilkyCheeseProduct mMilkyCheeseProduct = new MilkyCheeseProduct(UINT++, new ShelfRow(5,'A')
				,10, MilkProduct, Medium, "Shoko", 2, Cheese, 5, 2);

	MilkyCheeseProduct mFruitProduct = new MilkyCheeseProduct(UINT++, new ShelfRow(5,'A')
					,10, MilkProduct, Medium, "Shoko", 2, Cheese, 5, 2);
	Store myStore = new Store("SuperShop", 3, 0, 0);
	Store newStore;

	cout << myStore << endl;
	ofstream outFile("MyStoreInfoBin.bin", ios::binary|ios::out);
	myStore.saveBin(outFile);
	outFile.close();

	ifstream inFile("MyStoreInfoBin.bin",ios::binary|ios::in);
	newStore.loadBin(inFile);
	inFile.close();

	cout << newStore;
}



