#pragma once
#include <string>
#include "MilkProduct.h"

class OtherMilkProduct: public MilkProduct {

private:
	const int mAmountOfNonMilkAdditions;
	const std::string** mNonMilkNames;

public:
	OtherMilkProduct();
	OtherMilkProduct(int id, int shelf, char row, int weight,
			ExposureValue exposure, const string& name, int fat, MilkType milktype,
			int colorcount, int amountOfNonMilkAdditions, char* nonMilkNames[]);
	virtual ~OtherMilkProduct();
	virtual int calculatePrice();
	virtual void print();

	virtual void write(ostream& out) const;
	virtual void read(istream& in);
	virtual void save(ofstream& out) const;
	virtual void load(ifstream& in);
	virtual void saveBin(ofstream& out) const;
	virtual void loadBin(ifstream& in);
};
