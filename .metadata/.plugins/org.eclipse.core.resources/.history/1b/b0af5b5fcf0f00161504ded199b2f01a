#pragma once
#include "Product.h"

enum MilkType { Cheese, Yogurt, Drink, Other};

class MilkProduct: public virtual Product
{
private:
	char* mName;
	int mFat;
	int mColorCount;
	MilkType mMilkType;

public:
	MilkProduct();
	MilkProduct(char* name, int id, ShelfRow place, int weight,
			ProductType type, ExposureValue exposure,int fat, MilkType milktype, int colorcount);
	virtual ~MilkProduct();
	virtual int calculatePrice();
	virtual void print();

	virtual void write(ostream& out) const;
	virtual void read(istream& in);
	virtual void save(ofstream& out) const;
	virtual void load(ifstream& in);
	virtual void saveBin(ofstream& out) const;
	virtual void loadBin(ifstream& in);
};



