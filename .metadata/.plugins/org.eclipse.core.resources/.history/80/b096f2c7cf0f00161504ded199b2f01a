#pragma once
#include "MilkProduct.h"

class MilkyCheeseProduct: public virtual MilkProduct
{
private:
	int mAddition;
public:
	MilkyCheeseProduct();
	MilkyCheeseProduct(int id, ShelfRow place, int weight,
			ProductType type, ExposureValue exposure, char* name, int fat, MilkType milktype,
			int colorcount, int addition);
	virtual ~MilkyCheeseProduct();
	virtual int calculatePrice();
	virtual void print();

	virtual void write(ostream& out) const;
	virtual void read(istream& in);
	virtual void save(ofstream& out) const;
	virtual void load(ifstream& in);
	virtual void saveBin(ofstream& out) const;
	virtual void loadBin(ifstream& in);
};

