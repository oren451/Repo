#include "Store.h"
#include "fstream"
#include "iostream"

using namespace std;

static int UINT = 0;

int main(int argc, char **argv) {

	Store myStore = new Store("SuperShop", 3, 0, 0);
	Store newStore;

	cout << myStore << endl;
		ofstream outFile("MyStoreInfoBin.bin", ios::binary|ios::out);
		myStore.saveBin(outFile);
		outFile.close();

		ifstream inFile("MyStoreInfoBin.bin",ios::binary|ios::in);
		newStore.loadBin(inFile);

		inFile.close();

		cout << newStore;
}



